---
// Componente ProductCard - Tarjeta individual de producto
interface Props {
    image: string;
    title: string;
    description: string;
    price: string;
    badge?: string;
    badgeColor?: 'verde' | 'turquesa';
    delay?: string;
}

const { image, title, description, price, badge, badgeColor = 'verde', delay = '0ms' } = Astro.props;
const badgeClass = badgeColor === 'verde' ? 'bg-verde' : 'bg-turquesa';
---

<div class="group relative fade-in-up" style={`transition-delay: ${delay};`}>
    <div class="relative overflow-hidden rounded-2xl shadow-sm bg-white aspect-[3/4]">
        <img src={image} alt={title} class="w-full h-full object-cover transition duration-700 group-hover:scale-105">
        <div class="absolute inset-x-0 bottom-0 p-4 opacity-0 group-hover:opacity-100 transition duration-300 flex justify-center pb-8 bg-gradient-to-t from-black/40 to-transparent">
            <button class="bg-crudo text-marron font-serif px-6 py-2 rounded-full hover:bg-turquesa hover:text-white transition shadow-lg text-sm">Ver Detalle</button>
        </div>
        {badge && (
            <div class={`absolute ${badgeColor === 'turquesa' ? 'top-3 left-3' : 'top-3 right-3'} ${badgeClass} text-white text-xs px-2 py-1 rounded font-medium`}>
                {badge}
            </div>
        )}
    </div>
    <div class="mt-4 text-center">
        <h3 class="font-serif text-lg text-marron">{title}</h3>
        <p class="text-sm text-gris">{description}</p>
        <p class="mt-2 font-medium text-turquesa">{price}</p>
    </div>
</div>
